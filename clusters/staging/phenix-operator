  name: phenix-operator-crds
  namespace: flux-system
spec:
  serviceAccountName: kustomize-controller
  interval: 5m
  sourceRef:
    kind: GitRepository
    name: elasticsearch-operators
  path: ./elasticsearch/operators/phenix-operator
  prune: true
  targetNamespace: elasticsearch-templates
